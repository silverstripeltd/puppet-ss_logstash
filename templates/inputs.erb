input {
	beats {
		port => 5044
		type => "logs"
		ssl => true
		ssl_certificate => "/etc/pki/tls/certs/logstash.crt"
		ssl_key => "/etc/pki/tls/private/logstash.key"
	}
	lumberjack {
		port => 5000
		type => "logs"
		ssl_certificate => "/etc/pki/tls/certs/logstash.crt"
		ssl_key => "/etc/pki/tls/private/logstash.key"
		congestion_threshold => 60
	}
}

output {
	pipeline { send_to => [graylog] }
}
